<Window x:Class="Chess.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Chess"
		mc:Ignorable="d"
		Title="Chess" MinHeight="600" Height="600" MinWidth="600" Width="600">
	<Canvas Name="canvas" Background="White">
		<Menu Width="600" Height="20">
			<MenuItem Name="MenuItemImport" Header="Import" Click="MenuItemImport_Click"/>
			<MenuItem Name="MenuItemExport" Header="Export" Click="MenuItemExport_Click"/>
			<MenuItem Name="MenuItemNewGame" Header="New Game" Click="MenuItemNewGame_Click"/>
		</Menu>
		<Canvas Name="CanvasChessBoard" Height="512" Width="512" Canvas.Top="20" Background="White" MouseLeftButtonDown="CanvasChessBoard_MouseLeftButtonDown"/>
	</Canvas>
</Window>
